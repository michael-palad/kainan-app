<%= form_for @restaurant do |f| %>
  <div>
    <% if @restaurant.errors.any? %>
      <%= pluralize(@restaurant.errors.count, "error") %>
      prevented this restaurant from being
      <%= @restaurant.new_record? ? "added" : "updated" %>
      
      <ul>
        <% @restaurant.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  
  <div class="form-group">
    <%= f.label :telephone_number %>
    <%= f.text_field :telephone_number %>
  </div>
  
   <div class="form-group">
    <%= f.label :cuisine %>
    <%= f.select :cuisine, 
        options_for_select(%w(Filipino Chinese American Korean Fastfood)),
        { include_blank: "Select Cuisine" } %>
  </div>
    
  <% if @restaurant.new_record? %>    
    <%= f.submit "Add Restaurant" %>
  <% else %>
    <%= f.submit "Update Restaurant" %>
  <% end %>
<% end %>