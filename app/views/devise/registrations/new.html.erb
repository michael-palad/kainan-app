<% content_for(:title) do %>
  Sign up
<% end %>

<%= render 'layouts/flash_messages' %>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
      html: { class: "form-horizontal" } ) do |f| %>
  <span class="text-danger"><%= devise_error_messages! %></span>

  <div class="field form-group">
    <%= f.label :email, class: "control-label col-sm-1", for: "user_email" %>
    <div class="col-sm-3">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :password, class: "control-label col-sm-1", for: "user_password" %>
   
    <div class="col-sm-3">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, class: "control-label col-sm-1",
          for: "user_password_confirmation" %>
    <div class="col-sm-3">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-1 col-sm-6">
       <%= f.submit "Sign up", class: "btn btn-primary",
           data: { disable_with: "Signing up" } %>
    </div>
  </div>
<% end %>